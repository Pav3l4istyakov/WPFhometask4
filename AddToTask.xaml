<Window x:Class="WPFhometask4.AddToTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить дело" Height="450" Width="400" ResizeMode="NoResize" Background="#FFFDFAF1">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название:" Margin="5"/>
            <TextBox Name="TitleTextBox" Margin="5"/>
            <TextBlock Text="Выполнить до:" Margin="5"/>
            <DatePicker Name="DueDatePicker" Margin="5"/>
            <TextBlock Text="Описание:" Margin="5"/>
            <TextBox Name="DescriptionTextBox" Margin="5"/>
            <Button Content="Сохранить дело" Margin="5" Background="#5EBEC4" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

