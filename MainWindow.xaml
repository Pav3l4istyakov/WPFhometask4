<Window x:Class="WPFhometask4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="MainWindow" Height="430" Width="353" Background="#FFFDFAF1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Список дел" FontSize="22" HorizontalAlignment="Left" Margin="10"/>
        <Button Grid.Row="0" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" Click="AddButton_Click">
            <Image Source="Image/add.png" Width="20" Height="20" />
        </Button>

        <DataGrid Grid.Row="1" Margin="5" Name="TaskListDataGrid" AutoGenerateColumns="False"
                  ItemsSource="{Binding TodoList}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Выполнено" Binding="{Binding Doing}" Width="Auto"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*" MaxWidth="10"/>
                <DataGridTextColumn Header="Выполнить до" Binding="{Binding DueDate, StringFormat=d}" Width="Auto"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*" Visibility="Visible"/>
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="DeleteButton_Click" Padding="0" Background="#5EBEC4" Foreground="Yellow">
                                <Image Source="icon.png" Width="10" Height="10" Stretch="Uniform" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="5">
            <Button Content="Удалить дело" Background="#5EBEC4" Foreground="White" Padding="10" Margin="5" Click="DeleteSelectedTask_Click"/>
            <Button Content="Добавить дело" Background="#5EBEC4" Foreground="White" Padding="10" Margin="5" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>