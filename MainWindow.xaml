<Window x:Class="WPFhometask4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFhometask4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Список дел" FontSize="26" HorizontalAlignment="Center" />

            <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="5" Background="#FDF5DF" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock Margin="5" >
            <Run FontSize="12">Приготовить покушать</Run>
            <LineBreak/>
            <Run FontSize="12">15.01.2024</Run>
            <LineBreak/>
            <Run FontSize="10">Нет описания</Run>
            <LineBreak/>
            <Run FontSize="12">Поработать</Run>
            <LineBreak/>
            <Run FontSize="12">20.01.2024</Run>
            <LineBreak/>
            <Run FontSize="10">Съездить на совещание в Москву</Run>
            <LineBreak/>
            <Run FontSize="12">Отдохнуть</Run>
            <LineBreak/>
            <Run FontSize="12">01.02.2024</Run>
            <LineBreak/>
            <Run FontSize="10">Съездить в отпуск в Сочи</Run>
            <LineBreak/>
                </TextBlock>
            </ScrollViewer>

            <CheckBox Grid.Column="1" Grid.Row="0" Content="Добавление новых дел" IsChecked="True" VerticalAlignment="Bottom"/>

            <ScrollViewer Grid.Column="1" Grid.Row="1" Margin="5" Background="#FDF5DF" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <TextBlock FontSize="12" Text="Название:" />
                    <TextBox Margin="0, 10"></TextBox>
                    <TextBlock FontSize="12" Text="Выполнить до:"/>
                    <DatePicker Margin="0, 10" ></DatePicker>
                    <TextBlock FontSize="12" Text="Описание:"/>
                    <TextBox Margin="0, 10" MaxLines="10" MinLines="10" ></TextBox>
                </StackPanel>
            </ScrollViewer>
            <Button Grid.Column="0" Grid.Row="2" Content="Удалить дела" Background="#5EBEC4" Height="30" Width="100" Margin="5"/>
            <Button Grid.Column="1" Grid.Row="2" Content="Добавить дело" Background="#5EBEC4" Height="30" Width="100" Margin="5"/>
        </Grid>
    </Grid>
</Window>
